<Window x:Class="Assignment3_ATMApp.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateAccountWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="AccountNumberTextBox" Width="200" Margin="10" Text="Account Number" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox Name="InitialBalanceTextBox" Width="200" Margin="10" Text="Initial Balance" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox Name="InterestRateTextBox" Width="200" Margin="10" Text="Interest Rate" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox Name="AccountHolderNameTextBox" Width="200" Margin="10" Text="Account Holder Name" GotFocus="RemoveText" LostFocus="AddText"/>
            <Button Name="CreateButton" Content="Create" Width="200" Margin="10" Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
